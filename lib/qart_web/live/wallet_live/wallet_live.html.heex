<%= if @live_action == :tx do %>
<div class="flex flex-col mx-4">
  <div class="mx-auto w-full grow lg:flex border-b mb-2">
    <div
      class="flex mt-4 mb-4"
      name="page-header"
    >
      <div
        class="mr-8">
        <span
          class="text-slate-500">
          Wallet ID
        </span>
        <a
          href={"/wallets/#{@wallet_id}"}
          class="text-blue-700">{@wallet.id}</a>
          <span
            class="text-slate-400">
            {@wallet.name}
          </span>

      </div>
      <div
        class="mr-8">
        <div>
          <span
            class="text-slate-500">
            Derivation Path
          </span>
          <%= if @editing_derivation_path do %>
            <form
              phx-submit="save-derivation-path"
              class="flex items-center space-x-1 text-sm">
              <%
                string = "m/44'/236'/0'/0/1"
                derivation_elements = ["44'", "236'", "0'", "0", "1"]
              %>

              <%= for {seg, idx} <- Enum.with_index(derivation_elements) do %>
                <input
                  type="text"
                  name={"segments[#{idx}]"}
                  value={seg}
                  class="w-12 p-1 text-center border rounded text-sm"/>
                <input
                  type="checkbox"
                  name={"segments[#{idx}]"}
                  value={seg}
                  class="hidden p-1 text-center border rounded"/>
              <% end %>

              <button
                type="submit"
                class="px-2 py-1 bg-blue-500 text-white rounded text-xs">
                OK
              </button>
            </form>
          <% else %>
            <span
              phx-click="edit-derivation-path"
              class="cursor-pointer text-blue-600 hover:underline text-sm">
              {@derivation_path}
            </span>
          <% end %>


          &nbsp;
        </div>
      </div>
      <div
        class="">
        <div>
          <span
            class="text-slate-500">
            Address
          </span>

          <span
            class="font-mono">
            {@address |> BSV.Address.to_string}
          </span>
          <% wallet_recently_synced = DateTime.diff(DateTime.utc_now(), @wallet_last_synced_at, :second) %>
          <%= if wallet_recently_synced >= 0 && wallet_recently_synced <= 10 do %>
          <button type="button"
          phx-click="sync-address"
          phx-value-address={@address |> BSV.Address.to_string}
            class="text-xs bg-slate-300 hover:bg-slate-400 text-slate-600 px-3 py-1 rounded">
            Updated {@wallet_last_synced_at |> inspect}
          </button>
          <% else %>
          <button type="button"
          phx-click="sync-address"
          phx-value-address={@address |> BSV.Address.to_string}
            class="text-xs bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded">
            Sync address
          </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div
    class="mx-auto w-full border-b pt-1 pb-4 text-xl text-slate-300"
    name="addresses"
  >
  <div
    class="text-xs text-slate-300 uppercase mb-1">
    Wallet addresses
  </div>
  <%= for address <- @addresses do %>
    <%= if address.address === @address do %>
      <span
        class="font-mono mr-2 text-green-600">
        <%= address.address %>
      </span>
    <% else %>
      <span
        class="font-mono mr-2">
      <a href={~p"/wallets/#{address.wallet_id}/addresses/#{address.address}"}><%= address.address %></a>
    </span>
    <% end %>
  <% end %>
  </div>

  <div
    name="tx-viewer"
    class="mx-auto w-full grow lg:flex gap-4">
    <div
      class="w-1/5">
      <div
        class="mt-2 mb-2">
        <span
          class="text-slate-400">
          Locally-cached
        </span>
        <a href="/transactions"
          class="text-blue-600"
        >Transactions</a>
      </div>
      <%= for {tx, index} <- Enum.with_index(@transactions) do %>
        <% tx_utxos = Enum.find(@utxos, fn txout ->
          utxo_txid = txout.outpoint |> BSV.OutPoint.get_txid
          utxo_txid == tx.txid end) %>
        <% tx_has_utxos = Enum.any?(@utxos, fn txout ->
          utxo_txid = txout.outpoint |> BSV.OutPoint.get_txid
          utxo_txid == tx.txid end) %>

        <a href={~p"/transactions/#{tx.txid}"} class="text-slate-600 text-sm">
