<%= if @live_action != :index do %>
<div
  name="top-navigation"
  class="flex justify-between items-center">
  <div>
    <.link
      class="my-2 inline-flex rounded-md px-3 py-2 text-sm font-semibold text-slate-800"
      patch={~p"/wallets"}>
      <span>
        <span aria-hidden="true">&larr;</span>
        All Wallets
      </span>
    </.link>
    <.link
      patch={~p"/wallet/tx"}
      class="my-2 inline-flex rounded-md px-3 py-2 text-sm font-semibold text-slate-800"
    >
      <span>Craft a Tx</span>
    </.link>
  </div>

  <div>
    <button
      type="button" phx-click="make_wallet_active"
      class="text-xs text-slate-400 hover:text-slate-700">
      <span>Set wallet as default</span>
    </button>
    <.link
      patch={~p"/wallet/"}
      class="my-2 rounded-md px-3 py-2 text-sm font-semibold text-slate-800">
      <span>
        Active Wallet
        <%= if @default_wallet.name do %>
        ({@default_wallet.name})
        <% else %>
        ({@default_wallet_id})
        <% end %>
        <span aria-hidden="true">&rarr;</span>
      </span>
    </.link>
  </div>
</div>
<% end %>

<%= if @live_action == :utils do %>
<.live_component
    module={QartWeb.WalletUtilsComponent}
    json={@json}
    mnemonic={@mnemonic}
